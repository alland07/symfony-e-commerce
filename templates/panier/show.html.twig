{% extends 'base.html.twig' %}

{% block title %}{{ 'panier.id'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'panier.id'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'panier.id'|trans }}</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>{{ 'panier.achat'|trans }}</th>
                <td>{{ panier.achat ? panier.achat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'panier.etat'|trans }}</th>
                <td>{{ panier.etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('panier_index') }}">{{ 'compte.accueil'|trans }}</a>

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
