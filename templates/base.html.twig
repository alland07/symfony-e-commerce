<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'base.bienvenue'|trans }}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    </head>
    <body>
    {% if app.user is not empty %}
    <pre>
        {{ dump(app.user) }}
        {{ dump(app.user.roles) }}
    </pre>
      {% endif %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link active" href="{{path('produit_index')}}">{{ 'base.accueil'|trans }}
                            <span class="sr-only">(current)</span>
                        </a>
                        <a class="nav-item nav-link active" href="{{path('compte')}}">{{ 'base.account'|trans }}</a>

                        {% if app.user is null %}
                            <a class="nav-item nav-link active" href="{{path('app_login')}}">{{ 'base.connexion'|trans }}</a>
                        {% else %}
                            <a class="nav-item nav-link active" href="{{path('app_logout')}}">{{ 'base.deco'|trans }}</a>
                        {% endif %}

                        <a class="nav-item nav-link active" href="{{path('panier_index')}}">{{ 'base.historique'|trans }}</a>
                        <a class="nav-item nav-link active" href="{{path('contenu_panier_index')}}">{{ 'base.basket'|trans }}</a>
                        {% if is_granted ('ROLE_SUPER_ADMIN') %}
                        <a class="nav-item nav-link active" href="{{path('super_admin')}}">Super Admin</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
  
    
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
