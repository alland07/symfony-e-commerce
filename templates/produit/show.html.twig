{% extends 'base.html.twig' %}

{% block title %}{{ 'produit.show'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'produit.show'|trans }}</h1>

<table class="table">
    <tbody>

        <tr>
            <th>{{ 'produit.nom'|trans }}</th>
            <td>{{ produit.nom }}</td>
        </tr>
        <tr>
            <th>{{ 'produit.show.desc'|trans }}</th>
            <td>{{ produit.description }}</td>
        </tr>
        <tr>
            <th>{{ 'produi.prix'|trans }}</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>{{ 'produit.stock'|trans }}</th>
            <td>{{ produit.stock }}</td>
        </tr>
        <tr>
            <th>{{ 'produit.photo'|trans }}</th>
            <td><img src="{{asset('/uploads/'~ produit.photo)}}"></td>
        </tr>
    </tbody>
</table>

   {% if app.user is not empty %}
     {{form(ajout_article)}}
       {% endif %}
       
<a href="{{ path('produit_index') }}">{{ 'produit.accueil'|trans }}</a>

{% if is_granted ('ROLE_ADMIN') %}
<a href="{{ path('produit_edit', {'id': produit.id}) }}">{{ 'produit.edit'|trans }}</a>
{{ include('produit/_delete_form.html.twig') }}
